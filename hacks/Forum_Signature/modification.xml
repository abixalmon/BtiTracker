  <!-- language (only english) -->
  <file>
  <name>"$DEFAULT_LANGUAGE_PATH/lang_main.php"</name>
  <operation>
    <action>"add"</action>
    <where>"before"</where>
    <search><![CDATA[?>]]></search>
